{
  "editor.formatOnSave": true,
  "xo.enable": true,
  "xo.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "samverschueren.linter-xo"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "samverschueren.linter-xo"
  },
  "[typescript]": {
    "editor.defaultFormatter": "samverschueren.linter-xo"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "samverschueren.linter-xo"
  }
}
