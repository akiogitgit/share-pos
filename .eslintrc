{
  "plugins": ["unused-imports"],
  // extendsは上から適応されるため順番に注意
  // prettierは最後に書く
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:import/recommended", // 同じimport自動修正等
    "plugin:react-hooks/recommended",
    "prettier"
  ],

  "ignorePatterns": ["*.config.js"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn", // 未使用の変数
    "@typescript-eslint/no-empty-function": "error", // 空の関数
    "unused-imports/no-unused-imports": "error", // 未使用のインポート
    "react-hooks/rules-of-hooks": "error", // フックスのルール
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["sibling", "parent"],
          "object"
        ],
        "newlines-between": "always", // グループ間で改行
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
